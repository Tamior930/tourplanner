<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="5" prefWidth="250"
      fx:controller="com.teameight.tourplanner.view.TourListView">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <ListView fx:id="tourListView" VBox.vgrow="ALWAYS"/>

    <Button fx:id="addTourButton" text="%tourlist.addbutton"
            onAction="#handleAddTour" maxWidth="Infinity"/>
</VBox> 